<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE generatorConfiguration PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN" "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd" >
<generatorConfiguration >
<!-- 设置mysql驱动路径 -->
<classPathEntry location="E:/WORKSPACES/SEFC/quartz-web/WebRoot/WEB-INF/lib/mysql-connector-java-5.0.4-bin.jar" />
<!-- 此处指定生成针对MyBatis3的DAO -->
  <context id="context1"  targetRuntime="MyBatis3">
  <!-- jdbc连接信息 -->
    <jdbcConnection driverClass="com.mysql.jdbc.Driver"  
    connectionURL="jdbc:mysql://localhost:3306/quartz_web?useUnicode=true&amp;characterEncoding=utf8&amp;autoReconnect=true&amp;failOverReadOnly=false" 
    userId="root" password="root" />
    <!-- 生成vo对象 -->
    <javaModelGenerator targetPackage="org.quartz.web.pojo" targetProject="../src" />
    <!-- 生成用于查询的Example对象 -->
    <sqlMapGenerator targetPackage="org.quartz.web.pojo" targetProject="../src" />
    <!-- 生成DAO的类文件以及配置文件 -->
    <javaClientGenerator targetPackage="org.quartz.web.dao" targetProject="../src" type="XMLMAPPER" />
    <!-- 想要生成的数据库表,自动化工具会根据该表的结构生成相应的vo对象 -->
    <table tableName="qrtz_users" >
    </table>
  </context>
</generatorConfiguration>